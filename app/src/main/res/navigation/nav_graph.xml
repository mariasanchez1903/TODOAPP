<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/taskListFragment">

    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.example.todoapp.TaskListFragment"
        android:label="Task List"
        tools:layout="@layout/fragment_task_list">

        <action
            android:id="@+id/action_taskListFragment_to_completedTaskFragment"
            app:destination="@id/completedTaskFragment" />
    </fragment>

    <fragment
        android:id="@+id/completedTaskFragment"
        android:name="com.example.todoapp.CompletedTaskFragment"
        android:label="Completed Tasks"
        tools:layout="@layout/fragment_completed_task" />
</navigation>
